<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.keiju.proto.Login"
    android:background="#3b5aff">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/background"
        android:scaleType="fitXY"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/idText"
            android:layout_above="@+id/textView2"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="UserID"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:layout_above="@+id/idText"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="PASSWORD"
            android:id="@+id/textView2"
            android:textColor="#ffffff"
            android:layout_above="@+id/passText"
            android:layout_centerHorizontal="true" />

        <WebView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/webView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
 />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passText"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/btn1"
            android:layout_alignStart="@+id/btn1" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="ログイン"
            android:id="@+id/btn1"
            android:layout_marginTop="33dp"
            android:layout_below="@+id/passText"
            android:layout_alignLeft="@+id/idText"
            android:layout_alignStart="@+id/idText" />

    </RelativeLayout>

</RelativeLayout>
